@model CreateOrder

<form asp-action="Create" method="post" role="form">
    <h4>Order computer</h4>

    <div asp-validation-summary="All" class="danger"></div>

    <div class="form-group">
        <label asp-for="@Model.FirstName">FirstName</label>
        <input asp-for="@Model.FirstName" />
        <span asp-validation-for="@Model.FirstName" class="danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.LastName">LastName</label>
        <input asp-for="@Model.LastName" />
        <span asp-validation-for="@Model.LastName" class="danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Address">Address</label>
        <input asp-for="@Model.Address" />
        <span asp-validation-for="@Model.Address" class="danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.City">City</label>
        <input asp-for="@Model.City" />
        <span asp-validation-for="@Model.City" class="danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.State">State</label>
        <input asp-for="@Model.State" />
        <span asp-validation-for="@Model.State" class="danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ZipCode">ZipCode</label>
        <input asp-for="@Model.ZipCode" />
        <span asp-validation-for="@Model.ZipCode" class="danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.PhoneNumber">PhoneNumber</label>
        <input asp-for="@Model.PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Place Order" />
    </div>

</form>