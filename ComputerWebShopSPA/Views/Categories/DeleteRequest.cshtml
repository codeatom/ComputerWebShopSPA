@model CategoryViewModel
@{ ViewData["Title"] = "Remove category"; }



@if (Model != null)
{
    if (Model.Category.ComputerList == null || Model.Category.ComputerList.Count < 1)
    {
        <h3>Are you sure you want to delete the category?</h3>
        <a asp-action="Delete" asp-route-id="@Model.Category.Id">|Delete|</a>
        <a asp-action="Index" style="margin-left: 10px">|Back|</a>
    }
    else
    {
        <h4>Cannot remove Category</h4>
        <h6>It is binded to one or more computers.</h6>
        <br />
        <a asp-action="Index">|Back|</a>
    }
}